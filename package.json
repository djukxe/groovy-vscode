{
  "name": "groovy-vscode",
  "version": "1.0.0",
  "description": "Full-featured Groovy language support for VS Code with Jenkins shared library support",
  "publisher": "JulienTAHON",
  "displayName": "Groovy Language Support",
  "author": "Julien TAHON",
  "license": "GPLv3",
  "repository": {
    "type": "git",
    "url": "https://github.com/djukxe/groovy-vscode"
  },
  "bugs": {
    "url": "https://github.com/djukxe/groovy-vscode/issues"
  },
  "homepage": "https://github.com/djukxe/groovy-vscode#readme",
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "groovy",
    "jenkins",
    "shared-library"
  ],
  "galleryBanner": {
    "color": "#2D2D30",
    "theme": "dark"
  },
  "activationEvents": [
    "workspaceContains:**/*.groovy",
    "workspaceContains:**/*.gvy",
    "workspaceContains:**/*.gy",
    "workspaceContains:**/*.gsh"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "groovy",
        "aliases": [
          "Groovy",
          "groovy"
        ],
        "extensions": [
          ".groovy",
          ".gvy",
          ".gy",
          ".gsh"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "jenkins-pipeline",
        "aliases": [
          "Jenkinsfile"
        ],
        "extensions": [
          ".jenkins",
          ".pipeline"
        ],
        "filenames": [
          "Jenkinsfile"
        ]
      }
    ],
    "grammars": [
      {
        "language": "groovy",
        "scopeName": "source.groovy",
        "path": "./client/syntaxes/groovy.tmLanguage.json"
      },
      {
        "language": "jenkins-pipeline",
        "scopeName": "source.jenkins.pipeline",
        "path": "./client/syntaxes/jenkins-pipeline.tmLanguage.json",
        "injectTo": [
          "source.groovy"
        ]
      }
    ],
    "configuration": {
      "title": "Groovy Language Support",
      "properties": {
        "groovy.jenkins.sharedLibrary.varsPath": {
          "type": "string",
          "default": "vars",
          "description": "Relative path to the Jenkins shared library vars directory (containing global functions)"
        },
        "groovy.jenkins.sharedLibrary.srcPath": {
          "type": "string",
          "default": "src",
          "description": "Relative path to the Jenkins shared library src directory (containing classes and methods)"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "vscode:prepublish": "npm run compile",
    "package": "vsce package",
    "publish": "vsce publish",
    "lint": "eslint --ext ts client/src server/src",
    "lint:fix": "eslint --ext ts --fix client/src server/src",
    "publish:minor": "vsce publish minor",
    "publish:major": "vsce publish major",
    "publish:patch": "vsce publish patch",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.0",
    "@types/vscode": "^1.107.0",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "engines": {
    "node": ">=24.0.0",
    "vscode": "^1.107.0"
  }
}
