{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Groovy",
  "scopeName": "source.groovy",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#annotations" },
    { "include": "#class-declaration" },
    { "include": "#method-declaration" },
    { "include": "#operators" },
    { "include": "#constants" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.groovy",
          "begin": "/\\*",
          "end": "\\*/"
        },
        {
          "name": "comment.line.double-slash.groovy",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.groovy",
          "match": "\\b(if|else|switch|case|default|for|while|do|break|continue|return|try|catch|finally|throw|throws|assert)\\b"
        },
        {
          "name": "keyword.other.groovy",
          "match": "\\b(package|import|as|in|instanceof)\\b"
        },
        {
          "name": "storage.type.groovy",
          "match": "\\b(def|class|interface|enum|trait|extends|implements)\\b"
        },
        {
          "name": "storage.modifier.groovy",
          "match": "\\b(public|private|protected|static|final|abstract|synchronized|native|transient|volatile)\\b"
        },
        {
          "name": "keyword.other.new.groovy",
          "match": "\\bnew\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.groovy",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.groovy",
              "match": "\\\\."
            },
            {
              "name": "variable.other.interpolated.groovy",
              "match": "\\$\\{[^}]*\\}"
            },
            {
              "name": "variable.other.interpolated.groovy",
              "match": "\\$[a-zA-Z_][a-zA-Z0-9_]*"
            }
          ]
        },
        {
          "name": "string.quoted.single.groovy",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.groovy",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.triple.groovy",
          "begin": "'''",
          "end": "'''"
        },
        {
          "name": "string.quoted.triple.groovy",
          "begin": "\"\"\"",
          "end": "\"\"\""
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.groovy",
          "match": "\\b(0[xX][0-9a-fA-F]+|0[bB][01]+|\\d+\\.?\\d*([eE][+-]?\\d+)?[lLfFdD]?)\\b"
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "storage.type.annotation.groovy",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "class-declaration": {
      "patterns": [
        {
          "name": "meta.class.groovy",
          "match": "\\b(class|interface|enum|trait)\\s+([A-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "storage.type.groovy" },
            "2": { "name": "entity.name.type.class.groovy" }
          }
        }
      ]
    },
    "method-declaration": {
      "patterns": [
        {
          "name": "meta.method.groovy",
          "match": "\\b(def|void|[A-Z][a-zA-Z0-9_]*)\\s+([a-z][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "storage.type.groovy" },
            "2": { "name": "entity.name.function.groovy" }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.groovy",
          "match": "(\\+\\+|--|\\*\\*|==|!=|<=|>=|<=>|=~|==~|&&|\\|\\||\\?:|\\+|\\-|\\*|/|%|<|>|&|\\||\\^|~|!|=)"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.groovy",
          "match": "\\b(true|false|null|this|super)\\b"
        }
      ]
    }
  }
}
